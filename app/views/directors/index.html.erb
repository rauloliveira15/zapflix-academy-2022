<div id="directors" class="d-flex mb-5 justify-content-between">
  <h3> Diretores </h3>
 <%= link_to '+ Novo', new_director_path, class: "btn btn-primary" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th class="col-md-3" scope="col">Nome</th>
      <th class="col-md-3" scope="col">Criado em</th>
      <th class="col-md-3" scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @directors.each do |director| %>
      <%= render director %>
    <% end %>
  </tbody>
</table>




