<%= form_with(model: movie_genre) do |form| %>
  <% if movie_genre.errors.any? %>
    <div style="color: red">
      <h2>Foi encontrado <%=movie_genre.errors.count %> erro:</h2>

      <ul>
        <% movie_genre.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <form>
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div>
    <%= form.submit %>
  </div>
  </form>

<% end %>
